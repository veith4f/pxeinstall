hosts:
  - name: mywindowsclient
    config: unattend
    install: "nfs://192.168.234.233:/srv/nfs/Windows10UEFI.raw"
    install_to: /dev/nvme0n1
    root_pw: admin
    run_cmds: []
    nameserver: 192.168.234.254
    interfaces:
      Ethernet:
        mac: "ee:4a:6a:a1:04:40"
        dhcp: true
    groups:
      - ansible
    users:
      ansible:
        gecos: 'Ansible System User'
        passwd: ansible
        primary_group: Administrators
        groups:
          - ansible

  - name: mywindowsserver
    config: unattend
    install: "nfs://192.168.234.233:/srv/nfs/Windows10UEFI.raw"
    install_to: /dev/nvme0n1
    root_pw: admin
    run_cmds: []
    nameserver: 192.168.234.254
    interfaces:
      Ethernet:
        mac: "ee:4a:6a:a1:04:47"
        addresses:
          - 192.168.234.56/24
        routes:
          - to: 0.0.0.0/0
            via: 192.168.234.254
    users:
      ansible:
        gecos: 'Ansible System User'
        passwd: ansible
        primary_group: Administrators

  - name: mylinuxserver
    config: cloudinit
    install: "nfs://192.168.234.233:/srv/nfs/Debian12UEFI.raw"
    install_to: /dev/sda
    root_pw: admin
    run_cmds: []
    nameserver: 192.168.234.254
    interfaces:
      eth0:
        mac: "ee:4a:6a:a1:04:49"
        addresses:
          - 192.168.234.249/24
        routes:
          - to: 0.0.0.0/0
            via: 192.168.234.254
    groups:
      - ansible
    users:
      ansible:
        gecos: 'Ansible System User'
        ssh_keys:
          - ssh-rsa 
        sudo: yes
        uid: 1001
        passwd: ansible
        shell: /bin/bash
        primary_group: ansible
        groups:
          - wheel
          - adm
