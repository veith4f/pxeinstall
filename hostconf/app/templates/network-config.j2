version: 2
{%- if interfaces | length > 0%}
ethernets:
  {%- for name,iface in interfaces.items() %}
  eth{{ loop.index-1 }}:
    match:
      macaddress: "{{ iface.get('mac') }}"
    set-name: {{ name }}
    dhcp4: {%- if 'dhcp' in iface %} {{ iface.get('dhcp') }} {% else %} false {%- endif %}
    {%- if 'routes' in iface and iface.get('routes') | length > 0 %}
    routes:
      {%- for route in iface.get('routes') %}
      - to: {{ route.get('to') }}
        via: {{ route.get('via') }}
        {%- if 'metric' in route %}
        metric: {{ route.get('metric') }}
        {%- endif -%}
      {%- endfor %}
    {%- endif %}
    {%- if 'addresses' in iface and iface.get('addresses') | length > 0 %}
    addresses:
      {%- for address in iface.get('addresses') %}
      - {{ address }}
      {%- endfor %}
    {%- endif %}
  {%- endfor %}
{%- endif %}

